---
interface Props {
  id: string;
  title: string;
  className?: string;
}

const { id, title, className = "" } = Astro.props;
---

<section id={id} class:list={["section-container", className]}>
  <div class="max-w-5xl mx-auto w-full">
    <div class="mb-8">
      <h2 class="text-3xl font-bold tracking-tight text-foreground">{title}</h2>
    </div>
    <div>
      <slot />
    </div>
  </div>
</section>

<style>
  [data-theme="dark"] h2 {
    /* Optional: add neon glow to section headers in dark mode if desired, 
       but PRD specified it mostly for H1. We can keep it clean or add subtle glow. */
  }
</style>
